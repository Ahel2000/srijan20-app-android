<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/mp_background"
	tools:context=".activities.MainPage">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_background_circles"
		android:scaleX="1.2"
		android:scaleY="1.2"
		android:src="@drawable/mp_circles_center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_background_top"
		android:scaleType="fitStart"
		android:scaleX="1.25"
		android:scaleY="1.3"
		android:src="@drawable/mp_background_top"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/profilesetter"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.36" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_profile_circle"
		android:scaleType="fitStart"
		android:scaleX="0.4"
		android:scaleY="0.48"
		android:src="@drawable/avengerpro"
		app:layout_constraintBottom_toTopOf="@+id/profilesetter"
		app:layout_constraintEnd_toEndOf="@id/line1"
		app:layout_constraintStart_toStartOf="@id/line0" />


	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/g_top_right"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.375" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/g_top_right1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.525" />


	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line1"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.4" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line2"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.66" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line3"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.99" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line0"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/g_top_right2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.25" />

	<TextView
		android:id="@+id/timer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/timer_background"
		android:contentDescription="@string/main_page_timer_background"
		android:padding="30dp"
		android:scaleType="fitStart"
		android:scaleX="1"
		android:scaleY="0.35"
		android:text="HELLO"
		android:textColor="#ffffff"
		android:textSize="35sp"
		app:layout_constraintBottom_toTopOf="@+id/iv_about"
		app:layout_constraintStart_toStartOf="@+id/line0"
		app:layout_constraintTop_toBottomOf="@+id/g_top_right2"
		android:shadowColor="#f99245"
		android:shadowDx="-3"
		android:shadowDy="-3"
		android:shadowRadius="1"/>


	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/bottomline"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.79" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/bottommostline"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="1" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_circles_top_right"
		android:scaleType="fitStart"
		android:scaleX="0.85"
		android:scaleY="0.85"
		android:src="@drawable/mp_circles_upper_right"
		app:layout_constraintBottom_toTopOf="@id/g_top_right1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/g_top_right"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/triangle_above_srijan_circle"
		android:scaleType="fitStart"
		android:scaleX="0.55"
		android:scaleY="0.55"
		android:src="@drawable/splash_triangle_upper_above_circle"
		app:layout_constraintBottom_toTopOf="@id/g_top_right1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/g_top_right"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/srijan"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/fetsu_presents_srijan_20"
		android:scaleType="fitStart"
		android:scaleX="0.35"
		android:scaleY="0.35"
		android:src="@drawable/srijan20_upper"
		app:layout_constraintBottom_toTopOf="@id/g_top_right2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/g_top_right"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_background_bottom"
		android:scaleX="1.25"
		android:scaleY="1.5"
		android:src="@drawable/mp_back_bottom"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/options3" />

	<ImageView
		android:id="@+id/iv_sponsor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_sponsor"
		android:scaleType="fitStart"
		android:scaleX="0.5"
		android:scaleY="0.5"
		android:src="@drawable/sponsorswhite"
		app:layout_constraintBottom_toTopOf="@+id/bottommostline"
		app:layout_constraintEnd_toEndOf="@id/line1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/bottomline" />

	<ImageView
		android:id="@+id/iv_ca"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_ambassador"
		android:scaleType="fitStart"
		android:scaleX="0.46"
		android:scaleY="0.46"
		android:src="@drawable/campusambassador"
		app:layout_constraintBottom_toTopOf="@+id/bottommostline"
		app:layout_constraintEnd_toEndOf="@id/line3"
		app:layout_constraintStart_toStartOf="@+id/line2"
		app:layout_constraintTop_toBottomOf="@id/bottomline" />

	<ImageView
		android:id="@+id/iv_gallery"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_gallery"
		android:scaleType="fitStart"
		android:scaleX="0.46"
		android:scaleY="0.46"
		android:src="@drawable/gallerywhite"
		app:layout_constraintBottom_toTopOf="@+id/bottommostline"
		app:layout_constraintEnd_toEndOf="@id/iv_ca"
		app:layout_constraintStart_toStartOf="@+id/iv_sponsor"
		app:layout_constraintTop_toBottomOf="@id/bottomline" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/options1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.62" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/options2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.3" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/options3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.87" />

	<ImageView
		android:id="@+id/iv_about"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:contentDescription="@string/main_page_about"
		android:scaleType="fitStart"
		android:scaleX="1.4"
		android:scaleY="1.3"
		android:src="@drawable/about"
		app:layout_constraintBottom_toTopOf="@+id/options2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/options1" />

	<ImageView
		android:id="@+id/iv_events"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:contentDescription="@string/main_page_events"
		android:scaleType="fitStart"
		android:scaleX="1.3"
		android:scaleY="1.3"
		android:src="@drawable/events"
		app:layout_constraintBottom_toTopOf="@+id/options3"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/options2" />

	<ImageView
		android:id="@+id/iv_scan_qr"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginTop="4dp"
		android:background="@drawable/mp_circles_center"
		android:contentDescription="@string/scan_qr_code"
		android:src="@drawable/srijan_qr"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/iv_events" />

