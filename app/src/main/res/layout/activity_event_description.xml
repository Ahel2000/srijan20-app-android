<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/mp_background"
	tools:context=".activities.EventDescription">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:contentDescription="@string/srijan_circles"
		android:scaleX="1.2"
		android:scaleY="1.2"
		android:src="@drawable/mp_circles_center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/event_black_overlay"
		android:scaleY="1.2"
		android:src="@drawable/event_black_overlay"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/poster"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:contentDescription="poster"
				android:scaleType="fitXY" />

			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:id="@+id/event_name"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:layout_weight="5"
						android:fontFamily="sans-serif-thin"
						android:gravity="start"
						android:shadowColor="#f99245"
						android:shadowDx="-4"
						android:shadowDy="-4"
						android:shadowRadius="1"
						android:textColor="@color/cardview_light_background"
						android:textSize="30sp" />

					<TextView
						android:id="@+id/event_type"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="10dp"
						android:layout_weight="3"
						android:fontFamily="sans-serif-thin"
						android:gravity="right"
						android:shadowColor="#f99245"
						android:shadowDx="-4"
						android:shadowDy="-4"
						android:shadowRadius="1"
						android:textColor="@color/cardview_light_background"
						android:textSize="20sp" />

				</TableRow>
			</TableLayout>

			<TextView
				android:id="@+id/event_description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="5dp"
				android:layout_marginEnd="10dp"
				android:fontFamily="@font/kg"
				android:gravity="center"
				android:textColor="@color/cardview_light_background"
				android:textSize="24sp" />

			<TextView
				android:id="@+id/event_rules"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="5dp"
				android:layout_marginEnd="10dp"
				android:fontFamily="sans-serif-bold"
				android:gravity="start"
				android:shadowColor="#f99245"
				android:shadowDx="-3"
				android:shadowDy="-3"
				android:shadowRadius="1"
				android:text="RULES"
				android:textColor="@color/cardview_light_background"
				android:textSize="32sp" />

			<TextView
				android:id="@+id/event_rules_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="5dp"
				android:layout_marginEnd="10dp"
				android:fontFamily="@font/kg"
				android:gravity="center"
				android:textColor="@color/cardview_light_background"
				android:textSize="24sp" />

			<TextView
				android:id="@+id/event_contact"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="5dp"
				android:layout_marginEnd="10dp"
				android:fontFamily="sans-serif-bold"
				android:gravity="start"
				android:shadowColor="#f99245"
				android:shadowDx="-3"
				android:shadowDy="-3"
				android:shadowRadius="1"
				android:text="CONTACT"
				android:textColor="@color/cardview_light_background"
				android:textSize="32sp" />

			<TextView
				android:id="@+id/event_contact_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:layout_marginTop="5dp"
				android:layout_marginEnd="10dp"
				android:autoLink="phone"
				android:fontFamily="@font/kg"
				android:gravity="center"
				android:shadowColor="#f99245"
				android:shadowDx="-3"
				android:shadowDy="-3"
				android:shadowRadius="1"
				android:textColor="@color/cardview_light_background"
				android:textColorLink="#fff"
				android:textSize="28sp" />

			<Button
				android:id="@+id/button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="15dp"
				android:background="@drawable/btn_register"
				android:fontFamily="sans-serif-bold"
				android:padding="10dp"
				android:text="Register"
				android:textAllCaps="false"
				android:textSize="24sp" />
		</LinearLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>