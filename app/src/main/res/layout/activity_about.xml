<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/mp_background"
	tools:context=".activities.About">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_background_circles"
		android:scaleX="1.2"
		android:scaleY="1.2"
		android:src="@drawable/mp_circles_center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_background_top"
		android:scaleType="fitStart"
		android:scaleX="1.25"
		android:scaleY="1.3"
		android:src="@drawable/mp_background_top"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/profilesetter"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.36" />

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_profile_circle"
		android:scaleType="fitStart"
		android:scaleX="0.4"
		android:scaleY="0.48"
		android:src="@drawable/avengerpro"
		app:layout_constraintBottom_toTopOf="@+id/profilesetter"
		app:layout_constraintEnd_toEndOf="@id/line1"
		app:layout_constraintStart_toStartOf="@id/line0" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/g_top_right"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.375" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/g_top_right1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.525" />


	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line1"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.4" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line2"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.66" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line3"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.99" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/line0"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/g_top_right2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.25" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/bottomline"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.75" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/bottommostline"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="1" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/main_page_circles_top_right"
		android:scaleType="fitStart"
		android:scaleX="0.85"
		android:scaleY="0.85"
		android:src="@drawable/mp_circles_upper_right"
		app:layout_constraintBottom_toTopOf="@id/g_top_right1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/g_top_right"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/triangle_above_srijan_circle"
		android:scaleType="fitStart"
		android:scaleX="0.55"
		android:scaleY="0.55"
		android:src="@drawable/splash_triangle_upper_above_circle"
		app:layout_constraintBottom_toTopOf="@id/g_top_right1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/g_top_right"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/srijan"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/fetsu_presents_srijan_20"
		android:scaleType="fitStart"
		android:scaleX="0.35"
		android:scaleY="0.35"
		android:src="@drawable/srijan20_upper"
		app:layout_constraintBottom_toTopOf="@id/g_top_right2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/g_top_right"
		app:layout_constraintTop_toTopOf="parent" />


	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.30" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.55" />
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="1" />

	<androidx.core.widget.NestedScrollView
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@+id/guideline2"
		app:layout_constraintBottom_toBottomOf="@+id/guideline4">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			<com.google.android.youtube.player.YouTubePlayerView
				android:id="@+id/srijanVid"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>

			<TextView
				android:id="@+id/srijanText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:scaleX="1"
				android:scaleY="1"
				android:text="HELLO"
				android:textColor="#ffffff"
				android:textSize="18sp"
				android:layout_below="@+id/srijanVid"/>

			<LinearLayout
				android:id="@+id/clubsInfo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:gravity="center"
				android:layout_below="@+id/srijanText">

				<ImageView
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="8dp"
					android:background="@android:color/white"
					android:contentDescription="@string/jadavpur_university_logo"
					android:src="@drawable/ju_logo" />

				<ImageView
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="8dp"
					android:background="@android:color/white"
					android:contentDescription="@string/ccusl_logo"
					android:src="@drawable/ccjusl_logo" />

				<ImageView
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="8dp"
					android:background="@android:color/white"
					android:contentDescription="@string/ju_games_society_logo"
					android:src="@drawable/ju_game_society_logo" />

				<ImageView
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_margin="8dp"
					android:background="@android:color/white"
					android:contentDescription="@string/ju_science_club_logo"
					android:src="@drawable/jusc_logo" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/creatorsInfo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/clubsInfo"
				android:layout_margin="8dp"
				android:orientation="vertical">
				<view class="androidx.appcompat.app.AlertController$RecycleListView"
					android:id="@+id/creatorsList"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:divider="@null"
					android:dividerHeight="0dp"/>
			</LinearLayout>

		</RelativeLayout>
	</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>